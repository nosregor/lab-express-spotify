<div class="container text-center">
  <div class="row align-items-center">
    {{#each search}}

    <div class="col-sm-4">
      <div class="card" style="width: 16rem">
        <img class="card-img-top" src="{{this.images.1.url}}" alt="{{this.name}}">
        <div class="bottom">
          <p class="card-text">{{this.name}}</p>
          <a href="/albums/{{this.id}}" class="btn btn-primary">View Albums</a>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>